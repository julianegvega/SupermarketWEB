@page
@model SupermarketWEB.Pages.Details.EditModel
@{
    ViewData["Tittle"] = "Edit";
}

<h1>Edit</h1>

<h4>Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Detail.Id" />
            <div class="form-group">
                <label asp-for="Detail.Quiantity" class="control-label"></label>
                <input asp-for="Detail.Quiantity" class="form.control" />
                <span asp-validation-for="Detail.Quiantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.Price" class="control-label"></label>
                <input asp-for="Detail.Price" class="form.control" />
                <span asp-validation-for="Detail.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.InvoiceId" class="control-label"></label>
                <input asp-for="Detail.InvoiceId" class="form.control" />
                <span asp-validation-for="Detail.InvoiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detail.ProductId" class="control-label"></label>
                <input asp-for="Detail.ProductId" class="form.control" />
                <span asp-validation-for="Detail.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
